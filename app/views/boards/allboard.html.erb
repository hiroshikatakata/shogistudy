<div class="page_container">
  <div class="main_board_container">
    <div class="main_board_image"></div>
    <div class="main_board">
      <h2 class="main_board_title">議題一覧</h2>
      <div class="sort_list">
      <%= form_with url: allboard_boards_path, method: :get, local: true do |f| %>
        <% if @sorted.present? %>
          <%= f.select :sort, @sort_list, selected: @sorted, onChange: "javascript: this.form.submit();" %>
        <% else %>
          <%= f.select :sort, @sort_list, {}, onChange: "javascript: this.form.submit();" %>
        <% end %>
      <% end %>
      </div>
      <div class="main_board_content">
      <% @boards.each do |board| %>
        <li class="board_list"><%= link_to "#{board.title}", new_board_response_path(board.id) %></li>
      <% end %>
      </div>
    </div>
    <%= paginate @boards %>
  </div>
</div>
